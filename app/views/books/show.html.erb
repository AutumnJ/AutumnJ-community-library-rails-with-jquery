<link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:700" rel="stylesheet">
<div class="show-title">
  Below is the info about the book you selected:
</div>

<%= render partial:'show_basic_info', locals: {book: @book} %>

<div class="book-info">
  <strong>Status:</strong> <%= @text %>
</div>

<div class="book-authors">
  <%= link_to "Authors", book_path(@book), :class => "load-authors" %><br>
  <strong></strong>
  <ul></ul>
</div>

<div class="book-genres">
  <%= link_to "Genres", book_path(@book), :class => "load-genres" %><br>
  <strong></strong>
  <ul></ul>
</div>

<div class="book-info">
  <% if @book.comments.present? %>
    <strong>Comment(s) from users who have borrowed this book:</strong>

    <%= render partial: 'comments/display_all', locals: {comments: @book.comments} %>

  <% end %>
</div>

<div class="links">
  <%= link_to 'Delete', @book, method: :delete %> | <%= link_to "Edit", edit_book_path(@book) %>
</div> 

