<h2>Search for books in your collection:</h2>

<div class="book-search">
  <%= form_tag(search_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Books by Title" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<% if params[:search] %>
  <% if !@books.present? %>
    <h4>There are no books in your collection with the title <%= params[:search] %>.</h4>
  <% else %>
  <div class="book-list">
    <% @books.each do |book| %>
      <ul>
        <%= link_to book.title, book_path(book) %>
      </ul>
    <% end %>
  <% end %>
  </div>
<% end %> 