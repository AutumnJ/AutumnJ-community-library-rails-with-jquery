<%= form_for(@comment, url: book_comment_path(@book, @comment)) do |f| %>
<%= f.hidden_field :book_id, value: @book.id %>
<%= f.hidden_field :comment_id, value: @comment.id %>

  <%= render partial: 'layouts/error_messages', locals: {obj: @comment, back: borrowed_book_path(@book)} %>

  <h1>Update your comment below!</h1>

  <%= render 'form', f: f %>

  <button class="delete-button"><%= link_to "Delete", book_comment_path(@book, @comment), method: "delete", data: {confirm: "Are you sure?"}%></button>

<% end %>

